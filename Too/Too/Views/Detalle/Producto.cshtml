@model Too.Models.DETALLECARRITO

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>PRODUCTO</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Subdepartamento:
        </dt>

        <dd>
            @ViewBag.PROD.SUBDEPARTAMENTO.NOMSUBCATEGORIA
        </dd>

        <dt>
            Producto:
        </dt>

        <dd>
            @ViewBag.PROD.NOMBREPROD
        </dd>

        <dt>
            Descripción
        </dt>

        <dd>
            @ViewBag.PROD.DESCPROD
        </dd>

        <dt>
            Precio:
        </dt>

        <dd>
            @ViewBag.PROD.PRECIOUNIT
        </dd>

        <dt>
            Imagen:
        </dt>

        <dd>
            @ViewBag.PROD.IMAGENPROD
        </dd>

        <dt>
            ¿Disponible?
        </dt>

        <dd>
            @if (@ViewBag.PROD.DISPONIBILIDAD == true)
            {
                <p>En Stock</p>
            }
            else
            {
                <p>Agotado</p>
            }
        </dd>

    </dl>
</div>

<p>
    <a href="@Url.Action("Index", "Home")">Regresar al índice</a>
</p>
@using (Html.BeginForm("AñadirProducto", "DetallesCarritos", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="col-md-10">
            <input type="hidden" name="IDPRODUCTO" value="@ViewBag.PROD.IDPRODUCTO" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="hidden" name="IDCARRITO" value="@ViewBag.CARR.IDCARRITO" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <input type="text" name="CANTIDADPROD" value="" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="text" name="PRECIO" value="" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" name="submit" value="Añadir producto al carrito" class="btn btn-default" />
        </div>
    </div>
}
